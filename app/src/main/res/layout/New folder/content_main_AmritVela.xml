<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sumitsingh.sikhtv.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/midlayout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <RelativeLayout
        android:id="@+id/midlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="30dp">

        <ImageView
            android:id="@+id/youtube"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/youtube" />

        <ImageView
            android:id="@+id/contact"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:layout_alignTop="@+id/facebook"
            android:padding="15dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/contact" />

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/youtube"
            android:layout_alignStart="@+id/youtube"
            android:layout_below="@+id/youtube"
            android:padding="15dp"
            app:srcCompat="@drawable/facebook" />

        <ImageView
            android:id="@+id/live"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/facebook"
            android:padding="15dp"
            app:srcCompat="@drawable/live" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="SikhTV Live Channel"
        android:textColor="#ffffff"
        android:textStyle="bold" />
</RelativeLayout>
